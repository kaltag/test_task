<%= form_with url: "/zakaz", method: :post do |form| %>
   <div class="grid overflow-hidden grid-cols-2 items-center">
    <%= form.collection_check_boxes :ingredient, Ingredient.order(:name), :name, :name, {}, class: 'ml-48' %>
  </div>

  <div class="mt-4 px-4">
    <%= form.submit "Убрать ингредиенты", class: "relative w-full py-2 px-4 border border-transparent text-md md:text-sm leading-5 font-medium rounded-md text-white bg-indigo-500 hover:bg-indigo-700 focus:outline-none focus:border-indigo-800 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out" %>
  </div>
<% end %>

<%= link_to "JSON", jsonZakaz_path, method: :get  %>

